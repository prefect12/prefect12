{
  "name": "@rxliuli/website",
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@liuli-util/prettier-standard-config": "^0.2.0",
    "lint-staged": "^12.3.4",
    "prettier": "^2.3.2",
    "simple-git-hooks": "^2.5.1",
    "@liuli-util/commitlint-standard-config": "^0.1.6",
    "@liuli-util/eslint-config-ts": "^0.4.0"
  },
  "prettier": "@liuli-util/prettier-standard-config",
  "eslintConfig": {
    "extends": [
      "@liuli-util/eslint-config-ts"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "commitlint --edit $1",
    "pre-commit": "lint-staged"
  },
  "commitlint": {
    "extends": [
      "@liuli-util/commitlint-standard-config"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,css,vue}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "sync": [
    "gitignore",
    "prettier",
    "commitlint",
    "simplehooks",
    "eslint-ts"
  ],
  "scripts": {
    "postinstall": "npx simple-git-hooks"
  },
  "resolutions": {
    "esbuild": "0.14.36"
  }
}

